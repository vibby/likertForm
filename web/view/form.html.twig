
{% extends "layout.html" %}

{% form_theme form _self %}

{% block form_row %}
    <div {% if form.get('attr').class is defined %}class="{{ form.get('attr').class }}"{% endif %}>
        {{ form_label(form) }}
        {{ form_widget(form) }}
    </div>
    {% if help is defined %}
        <p class="form-help">
            {{ help }}
        </p>
    {% endif %}
    {% if form_errors(form) %}
        <p class="form-error">{{ form_errors(form) }}</p>
    {% endif %}
{% endblock %}

{% block choice_widget_expanded %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
    {% for child in form %}
        <span class="choiceItem">
            {{ form_label(child) }}
            {{ form_widget(child) }}
        </span>
    {% endfor %}
    </div>
{% endspaceless %}
{% endblock choice_widget_expanded %}

{% block title %}Questionaire{% endblock %}

{% block h1 %}Page {{ idPage }}{% endblock %}

{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block content %}
    <form action="#" method="post">
        {{ form_widget(form) }}

        <input type="submit" name="submit" value="Continuer" />
    </form>
{% endblock %}



