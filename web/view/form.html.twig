{% extends "layout.html.twig" %}

{% form_theme form _self %}

{% block head %}
    <style>
        .important { color: #336699; }

        {% for class in scales -%}
            #form>.{{ class }}+.{{ class }}
            {% if not loop.last %},{% endif %}
        {%- endfor %}{
            margin-top: 0 !important;
        }

        {% for class in scales -%}
            #form>.{{ class }}+.{{ class }} div label
            {% if not loop.last %},{% endif %}
        {%- endfor %}{
            visibility:hidden;
            height: 0;
            overflow: hidden;
        }
        {% for class in scales -%}
            #form>.{{ class }}>label:before
            {% if not loop.last %},{% endif %}
        {%- endfor %}{
            content: "→";
            display: block;
        }
        {% for class in scales -%}
            #form>.{{ class }}+.{{ class }}>label:before
            {% if not loop.last %},{% endif %}
        {%- endfor %}{
            content: "";
            display: inline;
        }
    </style>
{% endblock %}

{% block form_row %}
    <div {% if form.get('attr').class is defined %}class="{{ form.get('attr').class }}"{% endif %}>
        {{ form_label(form) }}
        {{ form_widget(form) }}
    </div>
    {% if help is defined %}
        <p class="form-help">
            {{ help }}
        </p>
    {% endif %}
    {% if form_errors(form) %}
        <p class="form-error">{{ form_errors(form) }}</p>
    {% endif %}
{% endblock %}

{% block choice_widget_expanded %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
    {% for child in form %}
        <span class="choiceItem">
            {{ form_label(child) }}
            {{ form_widget(child) }}
        </span>
    {% endfor %}
    </div>
{% endspaceless %}
{% endblock choice_widget_expanded %}

{% block content %}
    <h1>Enquête 2013 sur la vie au travail - Partie {{ idPage }}</h1>
    <div class="item">Voici une série de propositions suivies d'une échelle de réponse allant de "pas du tout d'accord" à "tout à fait d'accord". Entourez le chiffre qui correspond le mieux à votre opinion. Vous pouvez nuancer votre jugement grâce aux chiffres proposés.</div>
    <form action="#" method="post">
        {{ form_widget(form) }}

        <input type="submit" class="right button" name="submit" value="Continuer" />
        <div class="clear"></div>
    </form>
{% endblock %}

